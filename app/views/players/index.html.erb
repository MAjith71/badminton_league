<p style="color: green"><%= notice %></p>

<h1 style="text-align: center; color: #2c3e50; font-family: Arial, sans-serif; margin-bottom: 20px;">
Players
</h1>
<table class="leaderboard">
  <tr>
    <th>Name</th>
    <th>Wins</th>
    <th>Losses</th>
    <th></th>
  </tr>
  <% @players.each do |player| %>
    <tr>
      <td><%= player.name %></td>
      <td><%= player.wins %></td>
      <td><%= player.losses %></td>
      <td><%= button_to "Remove", player_path(player), method: :delete %></td>
    </tr>
  <% end %>
</table>

<%= link_to "Add Player", new_player_path %>
